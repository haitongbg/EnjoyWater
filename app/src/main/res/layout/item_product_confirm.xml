<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <com.enjoywater.view.TvSegoeuiRegular
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="Bình nước Lavie 19L"
        android:textColor="@color/text_grey_3"
        android:textSize="14sp" />

    <com.enjoywater.view.TvSegoeuiSb
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:maxLines="1"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="50.000 đ"
        android:textColor="@color/text_grey_3"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_subtract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_subtract_active" />

        <com.enjoywater.view.TvSegoeuiSb
            android:id="@+id/tv_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:text="444"
            android:textColor="@color/text_blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_active" />

    </LinearLayout>

</RelativeLayout>